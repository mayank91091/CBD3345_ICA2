name: 'Run Tests'
description: 'Run Python tests'
runs:
  using: 'composite'
  steps:
    - name: Run tests and create artifact
      shell: bash
      run: |
        python -m unittest test_app.py > test_output.txt 2>&1
        if [ $? -eq 0 ]
        then
          echo "success" > test_file.txt
        else
          echo "failure" > test_file.txt
        fi
    - name: Upload test result
      uses: actions/upload-artifact@v2
      with:
        name: test-result
        path: test_file.txt
